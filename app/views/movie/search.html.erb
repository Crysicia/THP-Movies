<section class="content-13 subscribe-form bg-turquoise">
  <div class="container">
    <div class="row">
      <form>
        <%= form_tag(search_path, method: :get) do %>
        <div class="col-sm-8">
          <%= text_field_tag :title %>
        </div>
        <div class="col-sm-4">
          <%= submit_tag "Create", name: nil %>
        </div>
        <% end %>
      </form>
    </div>
  </div>
</section>

